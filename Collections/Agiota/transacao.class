// transações bancárias para o masqueico agiotagens

import java.util.Scanner;
import java.util.HashMap;
import java.util.Map;
// identificação e o valor da transação


public class Transaction {
    private String name;
    private int id;
    private int value;

    public Transaction(int id, String name, int value) {
        this.name = name;
        this.value = value;
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String Name) {
        this.name = name;
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public int getValue() {
        return value;
    }

    public void setValue(int value) {
        this.value = value;
    }
// identificação, nome e valor do cliente devedor ao masqueico agiota

    @Override
    public String toString() {
        return String.format("- id:%d %s:%d", getId(), getName(), getValue());
    }
}